<mah:MetroWindow x:Class="ETPro.EventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:properties="clr-namespace:ETPro.Properties"
        xmlns:local="clr-namespace:ETPro"
        Style="{StaticResource defWindow}"
         WindowStartupLocation="CenterOwner"        
        mc:Ignorable="d"
        Title="EventWindow" Height="560" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:UCBack   Background="AliceBlue" 
                        Grid.Row="1"  
                        Grid.ColumnSpan="5"  
                        Grid.RowSpan="3"></local:UCBack>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Margin="0,5">
            <Button  x:Name="bSave"
                     BorderThickness="0"
                     Style="{StaticResource defButton}"
                     Margin="5"
                     Click="BSave_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="{x:Static properties:Resources.Save}"></TextBlock>
                    <TextBlock    FontFamily="Segoe MDL2 Assets"
                                  ToolTip="{x:Static properties:Resources.Cancel}"
                                  Text="&#xE792;"
                                  FontSize="20"
                                  Margin="10,0" />
                </StackPanel>
            </Button>
            <Button x:Name="bCancel" 
                    BorderThickness="0"
                     Style="{StaticResource defButton}"
                     Margin="10,0"
                    Click="BCancel_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="{x:Static properties:Resources.Cancel}"></TextBlock>
                    <TextBlock    FontFamily="Segoe MDL2 Assets"
                                  ToolTip="{x:Static properties:Resources.Cancel}"
                                  Text="&#xED60;"
                                  FontSize="20"
                                  Margin="10,0" />
                </StackPanel>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Margin="1,0">
                    <mah:Tile Style="{StaticResource header}" 
                              Title="{x:Static properties:Resources.ObjType}"/>
                    <ComboBox x:Name="cbObjType"
                      DisplayMemberPath = "WorthyNameHeb"
                      SelectedItem="{Binding ObjType}">
                    </ComboBox>
                    <mah:Tile  Style="{StaticResource header}" 
                               Width="200"
                              Title="{x:Static properties:Resources.EvntDate_YYYYMMDD}"/>
                    <DatePicker Name="dtEvntDate_YYYYMMDD"
                                Height="40"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                FontFamily="Arial"
                                FontWeight="Medium"
                        SelectedDate="{Binding EvntDate_YYYYMMDD,Converter={StaticResource dateTimeConverter}}"
                        Style="{StaticResource MahApps.Styles.DatePicker}"></DatePicker>
                </StackPanel>
                
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="1,0">
                    <Grid Height="85"></Grid>
                    <mah:Tile  Style="{StaticResource header}" 
                                 Width="260"
                                Title="{x:Static properties:Resources.PopUpAt_YYYYMMDDHHMM}"/>
                    <mah:DateTimePicker Name="dtPopUpAt_YYYYMMDDHHMM"
                        SelectedDateTime="{Binding PopUpAt_YYYYMMDDHHMM,Converter={StaticResource dateTimeConverter}}"
                        ></mah:DateTimePicker>
                </StackPanel>
            </Grid>
         
            <mah:Tile  Style="{StaticResource header}"
                       Title="{x:Static properties:Resources.EvntText}"/>
            <TextBox x:Name="tbEvntText"
                     Height="80"
                     Text="{Binding EvntText, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"></TextBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Visibility="Visible" 
                            Orientation="Vertical"
                            Grid.Column="1">
                    <mah:Tile Style="{StaticResource header}"
                              Title="{x:Static properties:Resources.Status}"/>
                    <ComboBox   x:Name="cbStatus"
                                SelectedValue="{Binding Status}">
                        <ComboBoxItem Content="{x:Static properties:Resources.Active}"></ComboBoxItem>
                        <ComboBoxItem Content="{x:Static properties:Resources.InActive}"></ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <mah:Tile Style="{StaticResource header}"
                              Title="{x:Static properties:Resources.IsReminder}"/>
                    <CheckBox x:Name="cbIsReminder" 
                              IsChecked="{Binding IsReminder}"
                              Style="{StaticResource toggleCk}"
                              ></CheckBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
