<mah:MetroWindow x:Class="ETPro.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:properties="clr-namespace:ETPro.Properties"
        xmlns:local="clr-namespace:ETPro"
        mc:Ignorable="d"
       Style="{StaticResource defWindow}"
        WindowStartupLocation="CenterScreen"
        Title="ClientWindow" Height="660" Width="670" Loaded="MetroWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:UCBack Background="AliceBlue"  Grid.Row="1"  Grid.ColumnSpan="5"  Grid.RowSpan="3"></local:UCBack>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Grid.Column="1" Grid.ColumnSpan="3"  Margin="0,5"  >
            <Button  BorderThickness="0"  Style="{StaticResource defButton}"   >
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="{x:Static properties:Resources.Save}" ></TextBlock>
                    <TextBlock    FontFamily="Segoe MDL2 Assets"   ToolTip="{x:Static properties:Resources.Cancel}" Text="&#xE792;" FontSize="20" Margin="10,0" />
                </StackPanel>
            </Button>
            <Button  BorderThickness="0"  Style="{StaticResource defButton}"  Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="{x:Static properties:Resources.Cancel}" ></TextBlock>
                    <TextBlock    FontFamily="Segoe MDL2 Assets"   ToolTip="{x:Static properties:Resources.Cancel}" Text="&#xED60;" FontSize="20" Margin="10,0" />
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel  Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.FullName}"/>
            <TextBox></TextBox>
            <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.AliaseName}" />
            <TextBox ></TextBox>
            
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition  Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"  Margin="1,0">
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.ClntIDN}"/>
                    <TextBox ></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" MinWidth="160" Grid.Column="1"  Margin="1,0">
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.ClntType}"/>
                    <ComboBox>
                        <ComboBoxItem Content="קבלן משנה"></ComboBoxItem>
                        <ComboBoxItem Content="לקוח קבוע"></ComboBoxItem>
                        <ComboBoxItem Content="לקוח מזדמן"></ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Visibility="Visible" Grid.Column="2"  Margin="1,0">
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.Status}"/>
                    <ComboBox>
                        <ComboBoxItem Content="{x:Static properties:Resources.Active}"></ComboBoxItem>
                        <ComboBoxItem Content="{x:Static properties:Resources.InActive}"></ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Vertical">
                <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.ClntDesc}"/>
                <TextBox Height="80"></TextBox>
            </StackPanel>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"  Margin="0,0,5,0">
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.Date1}"/>
                    <mah:DateTimePicker></mah:DateTimePicker>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,0,5,0">
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.Date2}"/>
                    <mah:DateTimePicker></mah:DateTimePicker>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="2" >
                    <mah:Tile Style="{StaticResource header}" Title="{x:Static properties:Resources.Date3}"/>
                    <mah:DateTimePicker></mah:DateTimePicker>
                </StackPanel>
            </Grid>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1"  Margin="0,5" VerticalAlignment="Center">
            <Button x:Name="titalAddress" Style="{StaticResource defButton}"    >
                <StackPanel  Orientation="Horizontal" >
                    <TextBlock  Text="{x:Static properties:Resources.Addresses}" VerticalAlignment="Center" ></TextBlock>
                    <TextBlock Style="{StaticResource defIcoTextblock}" Text="&#xE707;" ></TextBlock>
                </StackPanel>
            </Button>
            <Button    Style="{StaticResource defButton}"     Margin="10,0">
                <StackPanel  Orientation="Horizontal" >
                    <TextBlock Text="{x:Static properties:Resources.Communications}" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Style="{StaticResource defIcoTextblock}" Text="&#xE780;" ></TextBlock>
                </StackPanel>
            </Button>

        </StackPanel>
    </Grid>
</mah:MetroWindow>
